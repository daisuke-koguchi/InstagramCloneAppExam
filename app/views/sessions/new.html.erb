<div class="container">
<h1>ログイン</h1>
<%= notice %>
  <%= form_with(scope: :session, url:sessions_path ,local: true) do |form| %>
  　<div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <br>
    <%= form.submit "ログインする" %>
  <% end %>
  <br>
  <%= link_to 'トップページに戻る', users_path, class:'btn btn-secondary'%>
</div>