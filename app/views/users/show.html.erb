<div class="container">
  <h1> プロフィール確認</h1>
  <table class="table">
    <tbody>
      <tr>
        <th style="width: 20 %"> プロフィール写真</th>
        <% if @user.photo?%>
        <td><%= image_tag(@user.photo.url) %></td>
        <% else %>
        <td><%= image_tag('noimage.png', width: '50%', height:'50%') %></td>
        <% end %>
      </tr>
      <tr>
        <th >プロフィール名</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th>登録日時</th>
        <td><%= @user.created_at %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to "トップページに戻る", users_path ,class:'btn btn-secondary'%>
  <br>
</div>
