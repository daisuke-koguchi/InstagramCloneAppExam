<div class="container">
<h1>ブログ詳細</h1>
<table class="table">
  <tbody>
    <tr>
      <th>投稿写真</th>
      <%if @blog.image?%>
        <td><%= image_tag(@blog.image.url) %></td>
      <% else %>
        <%=image_tag('noimage.png',width: '40%', height:'40%')%>
      <% end %>
    </tr>
    <tr>
      <th>プロフィール名</th>
      <td>プロフィール名</td>
    </tr>
    <tr>
      <th>タイトル</th>
      <td><%= @blog.title %></td>
    </tr>
    <tr>
      <th>内容</th>
      <td><%= @blog.content %></td>
    </tr>
    <tr>
      <th>投稿日時</th>
      <td><%= @blog.created_at %></td>
    </tr>
    <tr>
      <th>編集日時</th>
      <td><%= @blog.updated_at %></td>
    </tr>
  </tbody>
</table>
<%= link_to "投稿トップページへ", blogs_path, class:'btn btn-secondary' %>
</div>