<div class="container">
  <div class="row">
    <% if @favorite.present? %>
    <% @blogs.each do |blog| %>
        <div class="col-md-3 ">
              <div class="card ">
          <%= image_tag(blog.image.thumb.url)%>
          <h4>プロフィール名：<%= blog.user.name%></h4>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
  <br>
  <%= link_to "投稿トップページへ", blogs_path, class:'btn btn-secondary' %>
</div>
