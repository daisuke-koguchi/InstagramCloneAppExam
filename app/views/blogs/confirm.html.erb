<div class="container">
  <h1>投稿確認画面</h1>
  <%= form_with(model:@blog, local: true, url:blogs_path) do |form| %>
    <%= form.hidden_field :title %>
    <%= form.hidden_field :content%>
    <P>タイトル:<%= @blog.title %></P>
    <P>内容:<%= @blog.content %></P>
    <%= form.submit "登録する"%>
    <%= form.submit "戻る", name: 'back' %>
  <% end %>
</div>